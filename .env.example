# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Server Configuration
NODE_ENV=development
PORT=3000

# Webhook Configuration (optional)
WEBHOOK_DOMAIN=https://your-domain.com
WEBHOOK_PATH=/webhook

# Database Configuration (optional)
# For Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/telmahawk

# Logging
LOG_LEVEL=info

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Voltagent AI Agent Configuration
VOLTAGENT_ENABLED=true
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
VOLTAGENT_PORT=3141

# Supabase Memory Configuration (optional)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_KEY=your_supabase_key_here
# SUPABASE_MEMORY_TABLE_NAME=voltagent_memory  # Optional: custom table prefix
# SUPABASE_MEMORY_STORAGE_LIMIT=100            # Optional: max messages per conversation
# SUPABASE_MEMORY_DEBUG=false                  # Optional: enable debug logging

# Bot Identity Configuration
BOT_NAME=Telmahawk
BOT_DESCRIPTION=An intelligent Telegram bot specializing in game industry knowledge and expertise
BOT_PERSONALITY=Professional, knowledgeable, and helpful game industry consultant
BOT_CAPABILITIES=Game industry research, market analysis, development insights, trend identification, and strategic guidance
BOT_VERSION=1.0.0